<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.fridahkanario.med_manager.AddMedication">

    <ImageView
        android:id="@+id/medImage"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:layout_weight="2"
        android:src="@drawable/med"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#9286ce"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/prescription"
            style="@style/editTxt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:entries="@array/prescription" />

        <EditText
            android:id="@+id/desc"
            style="@style/editTxt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Medicine Description"
            android:inputType="text" />

        <EditText
            android:id="@+id/name"
            style="@style/editTxt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Medicine Name"
            android:inputType="text" />

        <DatePicker
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/save"
            style="@style/editTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="save" />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f70112" />
    </LinearLayout>




</LinearLayout>
    </ScrollView>